page{
    color: rgba(19, 18, 18, 0.952);
    background: rgb(253, 250, 250);
    padding: 10rpx;
}

/*导航首页*/
.nav_wrap{

}
.nav{
    white-space: nowrap;
    padding: 5rpx 0;
}

.nav_item{
    padding: 20rpx 45rpx;
    font-size: 30rpx;
    display: inline-block;
}

.nav_item.active{
    border-bottom: 5rpx solid #ff9800;
}

/*轮播图*/
.slides{}
.slides swiper{
    height: 300rpx;
}
.slides navigator{
    width: 100%;
    height: 100%;
}
.slides image{
    width: 100%;
    height: 100%;
}

/*商品列表*/
.goods_wrap{
    display: flex;
    flex-wrap: wrap;
    padding: 5rpx;
    justify-content: space-between;
}
.goods_item{
    width: 48%;
    margin-bottom: 20rpx;
    background: rgb(250, 247, 247);
    border: 1rpx solid #141414;
    padding: 5rpx;
    border-radius: 15rpx;
}
.goods_img{
    position: relative;
    border: 1rpx solid #141414;
}
.goods_img image{
    width: 100%;
    border-radius: 15rpx;
}
.goods_img .goods_info{
    position: absolute;
    bottom: 6rpx;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
    color: #ffffff;
}
.goods_title{
    font-size: 30rpx;
    display: -webkit-box;
    overflow: hidden;
    white-space: normal;
    text-overflow: ellipsis;
    word-wrap: break-word;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #ffff;
    margin-left: 15rpx;
}
.price{
    color: #0a0908;
}
.pay_count{
    float: right;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
    font-size: 20rpx;
}