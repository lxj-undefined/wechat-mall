/* pages/detail/detail.wxss */
.main{
    padding: 15rpx;
    background: #fff;
    color: #000;
}
.slides{
   border: 1rpx solid #141414;
}

.slides swiper{
    height: 800rpx;  
}
.slides image{
    width: 100%;
    height: 800rpx;
    
}

.goodsInfo{
    align-content: center;
    justify-content: center;
}
.goodsInfo .price_block{
    box-sizing: border-box;
    justify-content: center;
    border: 1rpx solid #fff;
    border-radius: 15rpx;
    padding: 15rpx;
    margin-bottom: 20rpx;
}
.dis_price{
    color: #000;
    font-size: 50rpx;
}
.pro_price{
    font-size: 20rpx;
    margin-left: 20rpx;
}
.pro_name{
    font-size: 36rpx;
    padding-left: 20rpx;
    border: 1rpx solid #fff;
    border-radius: 15rpx;
    margin-bottom: 20rpx;
}

.adress_info{
    border: 1rpx solid #fff;
    border-radius: 15rpx;
    padding: 20rpx;
    display: flex;
    margin-bottom: 20rpx;
}
.adress{

}
.pay_count{
    float: right;
    margin-left: 300rpx;
    color: #ff9800;
}
.detail_img{

}

.imgList{
    
}
.imgList image{
    width: 100%;
    height: 100%;
}
/*底部工具栏*/
.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    height:100rpx;
    width: 100%;
    display: flex;
}
.footer navigator{

}
.footer navigator image{
    width: 60rpx;
    height: 60rpx;
    flex: 1;
    margin: 20rpx 15rpx 0 15rpx;
}
.add_to_cart{
    flex: 2;
    background: #26a6f0;
    border-right: 1rpx solid #000;
    display: flex;
    justify-content: center;
    align-items: center;
}
.buy{
    flex: 2;
    background: #ff3300;
    display: flex;
    justify-content: center;
    align-items: center;
}
.text{
    display: flex;
    justify-content: center;
    align-items: center;
    color: #000;
    font-weight: 600;
}